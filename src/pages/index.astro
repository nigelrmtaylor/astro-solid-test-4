---
import Layout from '../components/Layout.astro';


//
// Astro Components
//
import Bob from '../components/Bob.astro';

import Sol from '../components/Sol.tsx';
---

<Layout title="Astro Toolbox">
  <main>
    <hr/>
    <Bob/> without the client loadjj
    <hr/>
    <Sol client:load/>

  </main>
</Layout>

<style>
  :root {
    text-align: center;
  }
  .logo img {
    padding: 30px 0;
    width: 100%;
  }

  main {
    padding: 2rem 20px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    margin: 0 auto;
    max-width: 60ch;
    align-items: center;
  } 

  footer {
    width: 100%;
    height: 100px;
    border-top: 1px solid #eaeaea;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  footer img {
    width: 20px;
  }
</style>
